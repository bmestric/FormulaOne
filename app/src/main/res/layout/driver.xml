<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    app:cardCornerRadius="@dimen/_12dp"
    app:cardElevation="@dimen/_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16dp">

        <!-- Driver Headshot -->
        <ImageView
            android:id="@+id/ivDriverHeadshot"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/driver_headshot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/driver_helmet" />

        <!-- Team Color Accent Bar -->
        <View
            android:id="@+id/viewTeamColor"
            android:layout_width="0dp"
            android:layout_height="@dimen/_4dp"
            android:layout_marginTop="@dimen/_12dp"
            app:layout_constraintTop_toBottomOf="@id/ivDriverHeadshot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:background="#FF0000" />

        <!-- Driver Number -->
        <TextView
            android:id="@+id/tvDriverNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/viewTeamColor"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="#1" />

        <!-- Broadcast Name (e.g., "M VERSTAPPEN") -->
        <TextView
            android:id="@+id/tvBroadcastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/tvDriverNumber"
            app:layout_constraintBottom_toBottomOf="@id/tvDriverNumber"
            app:layout_constraintStart_toEndOf="@id/tvDriverNumber"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="M VERSTAPPEN" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:textSize="@dimen/_16sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvBroadcastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Max Emilian Verstappen" />

        <!-- Team Name with Icon -->
        <ImageView
            android:id="@+id/ivTeamIcon"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginTop="@dimen/_8dp"
            android:src="@drawable/race_flag"
            android:contentDescription="@string/team_icon"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tvTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/ivTeamIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivTeamIcon"
            app:layout_constraintStart_toEndOf="@id/ivTeamIcon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Red Bull Racing" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

