<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16dp">

        <!-- Settings Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/_24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="@dimen/_16dp" />

        <!-- Language Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            app:cardCornerRadius="@dimen/_12dp"
            app:cardElevation="@dimen/_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_12dp">

                    <ImageView
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:src="@drawable/ic_language"
                        android:contentDescription="@string/language"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_language"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="@dimen/_12dp" />

                <RadioGroup
                    android:id="@+id/rgLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbEnglish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/english"
                        android:textSize="@dimen/_16sp"
                        android:padding="@dimen/_8dp"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rbCroatian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/croatian"
                        android:textSize="@dimen/_16sp"
                        android:padding="@dimen/_8dp" />


                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16dp"
            app:cardCornerRadius="@dimen/_12dp"
            app:cardElevation="@dimen/_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_12dp">

                    <ImageView
                        android:layout_width="@dimen/_24dp"
                        android:layout_height="@dimen/_24dp"
                        android:src="@drawable/ic_theme"
                        android:contentDescription="@string/theme"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme"
                        android:textSize="@dimen/_18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_12dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_theme"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="@dimen/_12dp" />

                <!-- Theme RadioGroup -->
                <RadioGroup
                    android:id="@+id/rgTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbLightMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/light_mode"
                        android:textSize="@dimen/_16sp"
                        android:padding="@dimen/_8dp"
                        android:drawableStart="@drawable/ic_light_mode"
                        android:drawablePadding="@dimen/_8dp" />

                    <RadioButton
                        android:id="@+id/rbDarkMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dark_mode"
                        android:textSize="@dimen/_16sp"
                        android:padding="@dimen/_8dp"
                        android:drawableStart="@drawable/ic_dark_mode"
                        android:drawablePadding="@dimen/_8dp" />

                </RadioGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Apply Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:textSize="@dimen/_16sp"
            android:padding="@dimen/_12dp"
            android:layout_marginBottom="@dimen/_16dp"
            app:cornerRadius="@dimen/_8dp"
            android:enabled="false" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_12dp"
            app:cardElevation="@dimen/_4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_info"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
