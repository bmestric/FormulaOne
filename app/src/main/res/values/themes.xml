<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormulaOne" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/f1_red</item>
        <item name="colorPrimaryVariant">@color/f1_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/yellow_flag</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/f1_black</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.FormulaOne">
        <item name="android:textSize">@dimen/_35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:windowBackground">@color/f1_red</item>
        <item name="android:statusBarColor">@color/f1_red</item>
        <item name="android:navigationBarColor">@color/f1_red</item>
        <item name="android:textColorPrimary">@color/f1_black</item>
    </style>
</resources>